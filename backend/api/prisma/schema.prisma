generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Room {
  id         Int    @id @default(autoincrement())
  nome       String
  capacidade Int
  local      String
  descricao  String
  logs       Log[]
}

model Log {
  id        Int      @id @default(autoincrement())
  acao      String
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id])
  timestamp DateTime @default(now())
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  criadoEm DateTime @default(now())
}
