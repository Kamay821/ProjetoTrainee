generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Room {
  id          Int           @id @default(autoincrement())
  nome        String
  capacidade  Int
  local       String
  descricao   String
  logs        Log[]
  Reservation Reservation[]
}

model Log {
  id        Int      @id @default(autoincrement())
  acao      String
  roomId    Int
  room      Room     @relation(fields: [roomId], references: [id])
  timestamp DateTime @default(now())
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  password    String
  criadoEm    DateTime      @default(now())
  Reservation Reservation[]
}

model Reservation {
  id     Int      @id @default(autoincrement())
  date   DateTime
  user   User     @relation(fields: [userId], references: [id])
  userId Int
  room   Room     @relation(fields: [roomId], references: [id])
  roomId Int

  @@unique([roomId, date])
}
